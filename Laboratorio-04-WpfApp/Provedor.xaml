<Window x:Class="Laboratorio_04_WpfApp.Provedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio_04_WpfApp"
        mc:Ignorable="d"
        Title="Provedor" Height="450" Width="800">
    <StackPanel Orientation="Vertical">


        <Label Content="Nombre contacto" Width="120px"/>
        <TextBox x:Name="nombreContacto" Width="200px"/>
        <Label Content="Ciudad" Width="120px"/>
        <TextBox x:Name="ciudad" Width="200px" Margin="10px"/>


        <Button Margin="20px" HorizontalAlignment="Center" Name="proveed" Width="100px" Height="20px" Content="List proveedores"/>

        <DataGrid x:Name="productListado" Margin="10, 10, 10, 50"/>

    </StackPanel>
</Window>
